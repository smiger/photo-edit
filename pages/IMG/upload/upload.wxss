.cropper {
    position: absolute;
    top: 0;
    left: 0;
}

.cropper-buttons {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    -webkit-justify-content: center;
    justify-content: center;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 50px;
    line-height: 50px;
}

.cropper-buttons .upload,.cropper-buttons .getCropperImage {
    width: 100%;
    text-align: center;
}