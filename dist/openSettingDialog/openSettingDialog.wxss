.component-container {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 10;
    display: flex;
    justify-content: center;
    align-items: center;
}

.card {
    position: absolute;
    width: 600rpx;
    height: 220rpx;
    background-color: #FFF;
    border-radius: 4rpx;
    z-index: 2;
}

.maskBg {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.title {
    color: #666;
    font-size: 32rpx;
    width: 100%;
    height: 128rpx;
    line-height: 128rpx;
    text-align: center;
}

.line {
    width: 100%;
    height: 1px;
    background-color: #dedede;
}

.bottom {
    height: 92rpx;
    display: flex;
    flex-direction: row;
}

.btn-open {
    width: 100%;
    height: 92rpx;
    text-align: center;
    line-height: 95rpx;
    color: #5e00ff;
    font-size: 36rpx;
    border-radius: 0;
}