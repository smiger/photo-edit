<template name="we-cropper-love">
    <canvas bindtouchend="touchEnd" bindtouchmove="touchMove" bindtouchstart="touchStart" canvasId="{{id}}" class="cropper" disableScroll="true" style="left:{{left}}px;top:{{top}}px;width:{{width}}px;height:{{height}}px;" wx:if="{{show}}"></canvas>
    <image bindtap="addImagesTap" class="cropper" data-index="{{index}}" mode="center" src="/images/add.png" style="left:{{left}}px;top:{{top}}px;width:{{width}}px;height:{{height}}px;background-color: #FFF" wx:if="{{addshow}}"></image>
</template>
